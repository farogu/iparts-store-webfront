
<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>{{ page_title }}{% unless page_title contains shop.name %} - {{ shop.name }}{% endunless %}</title>
    
    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}
    
    {{ 'sunsky-theme.css' | asset_url | stylesheet_tag }}
    {{ content_for_header }}
  </head>

  <body>
    <header class="header">
      <div class="container">
        <h1><a href="/">{{ shop.name }}</a></h1>
        <nav>
          <a href="/collections/all">Productos</a>
          <a href="/pages/contact">Contacto</a>
        </nav>
      </div>
    </header>

    <main>{{ content_for_layout }}</main>

    <footer class="footer">
      <div class="container">
        <p>&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}</p>
      </div>
    </footer>

    <script src="{{ 'sunsky-integration.js' | asset_url }}"></script>
    <script>
      window.sunskySettings = {
        apiKey: {{ settings.sunsky_api_key | json }},
        enabled: {{ settings.enable_sunsky_integration | json }}
      };
    </script>
  </body>
</html>
