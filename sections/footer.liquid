<style>
  .footer {
    margin-top: 6rem;
    background: #1f2937;
    color: white;
  }

  .footer-wrapper {
    padding: 6rem 0 2rem;
  }

  .footer-content {
    margin-bottom: 4rem;
  }

  .footer-blocks {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 4rem;
    margin-bottom: 4rem;
  }

  .footer-block--info {
    grid-column: span 2;
  }

  .footer-heading {
    margin-bottom: 2rem;
    color: white;
  }

  .footer-description {
    margin-bottom: 2rem;
    color: #d1d5db;
    line-height: 1.7;
  }

  .footer-contact p {
    margin-bottom: 0.8rem;
    color: #d1d5db;
  }

  .footer-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-link {
    color: #d1d5db;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-link:hover {
    color: var(--electric-blue);
  }

  .footer-newsletter {
    background: #374151;
    padding: 3rem;
    border-radius: 12px;
    margin-bottom: 4rem;
  }

  .newsletter-heading {
    margin-bottom: 1rem;
    color: white;
  }

  .newsletter-description {
    margin-bottom: 2rem;
    color: #d1d5db;
  }

  .newsletter-input-wrapper {
    display: flex;
    gap: 1rem;
    max-width: 400px;
  }

  .newsletter-input {
    flex: 1;
    padding: 1.2rem;
    border: 1px solid #6b7280;
    border-radius: 6px;
    background: white;
    font-size: 1.4rem;
  }

  .newsletter-button {
    white-space: nowrap;
  }

  .footer-social {
    text-align: center;
    margin-bottom: 3rem;
  }

  .social-heading {
    margin-bottom: 2rem;
    color: white;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 4rem;
    height: 4rem;
    background: #374151;
    border-radius: 50%;
    color: #d1d5db;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: var(--electric-blue);
    color: white;
    transform: translateY(-2px);
  }

  .footer-bottom {
    border-top: 1px solid #374151;
    padding-top: 3rem;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .footer-copyright {
    color: #9ca3af;
  }

  .footer-policies {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .footer-policy-link {
    color: #9ca3af;
    text-decoration: none;
    font-size: 1.3rem;
  }

  .footer-policy-link:hover {
    color: var(--electric-blue);
  }

  .footer-divider {
    color: #6b7280;
  }

  .footer-payment {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .payment-text {
    color: #9ca3af;
    font-size: 1.3rem;
  }

  .payment-icons {
    display: flex;
    gap: 0.5rem;
  }

  .payment-icon {
    font-size: 2rem;
  }

  @media screen and (max-width: 989px) {
    .footer-blocks {
      grid-template-columns: repeat(2, 1fr);
      gap: 3rem;
    }

    .footer-block--info {
      grid-column: span 2;
    }

    .newsletter-input-wrapper {
      flex-direction: column;
      max-width: none;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
      gap: 2rem;
    }

    .footer-policies {
      flex-wrap: wrap;
      justify-content: center;
    }
  }

  @media screen and (max-width: 749px) {
    .footer-blocks {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-block--info {
      grid-column: span 1;
    }

    .footer-wrapper {
      padding: 4rem 0 2rem;
    }

    .newsletter-input-wrapper {
      max-width: none;
    }

    .social-links {
      gap: 1.5rem;
    }
  }
</style>

{% schema %}
{
