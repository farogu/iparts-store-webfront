
<!-- Hero Banner -->
<div class="hero-section gradient">
  <div class="page-width">
    <div class="hero-content">
      <h1 class="hero-title h0">
        Repuestos iPhone de Calidad Premium
      </h1>
      <p class="hero-description h3">
        Encuentra las mejores piezas para tu iPhone con garant√≠a de calidad
      </p>
      <div class="hero-actions">
        <a href="#model-selector" class="button button--primary button--large">
          Ver Productos
        </a>
      </div>
    </div>
  </div>
</div>

<!-- Model Selector -->
<div id="model-selector" class="model-selector-section page-width">
  <div class="section-header text-center">
    <h2 class="section-title h1">Selecciona tu iPhone</h2>
    <p class="section-description">Elige tu modelo para ver productos compatibles</p>
  </div>
  
  <div class="model-grid">
    <div class="model-item" data-model="iphone-15">
      <div class="model-content">
        <h3 class="model-name h4">iPhone 15</h3>
        <p class="model-year">2023</p>
      </div>
    </div>
    <div class="model-item" data-model="iphone-14">
      <div class="model-content">
        <h3 class="model-name h4">iPhone 14</h3>
        <p class="model-year">2022</p>
      </div>
    </div>
    <div class="model-item" data-model="iphone-13">
      <div class="model-content">
        <h3 class="model-name h4">iPhone 13</h3>
        <p class="model-year">2021</p>
      </div>
    </div>
    <div class="model-item" data-model="iphone-12">
      <div class="model-content">
        <h3 class="model-name h4">iPhone 12</h3>
        <p class="model-year">2020</p>
      </div>
    </div>
  </div>

  <div class="selected-model-info" style="display: none;">
    <div class="selected-model-card color-scheme-1 gradient">
      <h3>Modelo seleccionado: <span id="selected-model-name"></span></h3>
      <p>Mostrando productos compatibles con tu iPhone</p>
      <button class="button button--secondary" onclick="clearModelSelection()">
        Cambiar modelo
      </button>
    </div>
  </div>
</div>

<!-- Featured Products -->
<div class="featured-products-section page-width">
  <h2 class="section-title h1 text-center">Productos Destacados</h2>
  
  <div class="product-grid" id="featured-products-grid">
    {% for product in collections.all.products limit: 8 %}
      <div class="product-card">
        <a href="{{ product.url }}" class="product-card-link">
          {% if product.featured_image %}
            {{ product.featured_image | image_url: width: 300 | image_tag: 
              alt: product.title,
              class: 'product-image',
              loading: 'lazy'
            }}
          {% else %}
            <div class="product-image-placeholder">
              <span>Sin imagen</span>
            </div>
          {% endif %}
          
          <div class="product-info">
            <h3 class="product-title h5">{{ product.title }}</h3>
            <div class="product-price">
              <span class="price">{{ product.price | money }}</span>
              {% if product.compare_at_price > product.price %}
                <span class="compare-at-price">{{ product.compare_at_price | money }}</span>
              {% endif %}
            </div>
            
            {% if product.available %}
              <span class="availability available">Disponible</span>
            {% else %}
              <span class="availability unavailable">Agotado</span>
            {% endif %}
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .hero-section {
    background: linear-gradient(135deg, #0066FF 0%, #6366f1 100%);
    color: white;
    padding: 8rem 0;
    margin-bottom: 4rem;
  }

  .hero-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-title {
    margin-bottom: 2rem;
    font-weight: 700;
  }

  .hero-description {
    margin-bottom: 3rem;
    opacity: 0.9;
  }

  .hero-actions .button {
    min-width: 200px;
  }

  .model-selector-section {
    padding: 6rem 0;
    background: #f8fafc;
  }

  .section-header {
    margin-bottom: 4rem;
  }

  .section-title {
    margin-bottom: 1rem;
    color: #1f2937;
  }

  .section-description {
    color: #6b7280;
    font-size: 1.8rem;
  }

  .model-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .model-item {
    background: white;
    padding: 3rem 2rem;
    border-radius: 12px;
    text-align: center;
    cursor: pointer;
    border: 2px solid #e5e7eb;
    transition: all 0.3s ease;
  }

  .model-item:hover,
  .model-item.active {
    border-color: var(--electric-blue);
    background: #f0f7ff;
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 102, 255, 0.15);
  }

  .model-name {
    margin-bottom: 0.5rem;
    color: #1f2937;
  }

  .model-year {
    color: #6b7280;
    margin: 0;
  }

  .selected-model-info {
    text-align: center;
  }

  .selected-model-card {
    background: var(--electric-blue);
    color: white;
    padding: 2rem;
    border-radius: 12px;
    max-width: 500px;
    margin: 0 auto;
  }

  .selected-model-card h3 {
    margin-bottom: 1rem;
  }

  .selected-model-card p {
    margin-bottom: 1.5rem;
    opacity: 0.9;
  }

  .featured-products-section {
    padding: 6rem 0;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2.5rem;
    margin-top: 4rem;
  }

  .product-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }

  .product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .product-card-link {
    text-decoration: none;
    color: inherit;
  }

  .product-image {
    width: 100%;
    height: 240px;
    object-fit: cover;
  }

  .product-image-placeholder {
    width: 100%;
    height: 240px;
    background: #f3f4f6;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #9ca3af;
  }

  .product-info {
    padding: 2rem;
  }

  .product-title {
    margin-bottom: 1rem;
    color: #1f2937;
  }

  .product-price {
    margin-bottom: 1rem;
  }

  .price {
    font-weight: 700;
    color: var(--electric-blue);
    font-size: 1.8rem;
  }

  .compare-at-price {
    text-decoration: line-through;
    color: #6b7280;
    margin-left: 1rem;
  }

  .availability {
    display: inline-block;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 1.2rem;
    font-weight: 600;
  }

  .availability.available {
    background: #dcfce7;
    color: #166534;
  }

  .availability.unavailable {
    background: #fef2f2;
    color: #dc2626;
  }

  @media screen and (max-width: 749px) {
    .hero-section {
      padding: 4rem 0;
    }

    .hero-title {
      font-size: 3.2rem;
    }

    .model-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    .model-item {
      padding: 2rem 1.5rem;
    }

    .product-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 2rem;
    }
  }
</style>

<script>
  function clearModelSelection() {
    document.querySelectorAll('.model-item').forEach(item => {
      item.classList.remove('active');
    });
    document.querySelector('.selected-model-info').style.display = 'none';
    
    // Mostrar todos los productos
    document.querySelectorAll('.product-card').forEach(card => {
      card.style.display = 'block';
    });
  }

  document.addEventListener('DOMContentLoaded', function() {
    // Model selector functionality
    document.querySelectorAll('.model-item').forEach(item => {
      item.addEventListener('click', function() {
        const model = this.dataset.model;
        
        // Update active state
        document.querySelectorAll('.model-item').forEach(i => i.classList.remove('active'));
        this.classList.add('active');
        
        // Show selected model info
        const selectedInfo = document.querySelector('.selected-model-info');
        const modelName = document.getElementById('selected-model-name');
        
        selectedInfo.style.display = 'block';
        modelName.textContent = model.replace('iphone-', 'iPhone ').replace('-', ' ');
        
        // Filter products
        filterProductsByModel(model);
      });
    });
  });

  function filterProductsByModel(model) {
    const modelNumber = model.replace('iphone-', '');
    const products = document.querySelectorAll('.product-card');
    
    products.forEach(card => {
      const title = card.querySelector('.product-title').textContent.toLowerCase();
      const isCompatible = title.includes(modelNumber) || title.includes(`iphone ${modelNumber}`);
      
      card.style.display = isCompatible ? 'block' : 'none';
    });
  }
</script>
