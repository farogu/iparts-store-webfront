
<div class="max-w-7xl mx-auto px-4 py-8">
  <!-- Collection Header -->
  <div class="text-center mb-12">
    <h1 class="text-3xl font-bold text-gray-900 mb-4">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <p class="text-gray-600">{{ collection.description }}</p>
    {% endif %}
  </div>

  <!-- Products Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    {% for product in collection.products %}
      <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg">
        <a href="{{ product.url }}">
          {% if product.featured_image %}
            <img src="{{ product.featured_image | img_url: '300x300' }}" 
                 alt="{{ product.title }}" 
                 class="w-full h-48 object-cover">
          {% else %}
            <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
              <span class="text-gray-400">Sin imagen</span>
            </div>
          {% endif %}
          
          <div class="p-4">
            <h3 class="font-semibold text-gray-900 mb-2">{{ product.title }}</h3>
            <p class="text-blue-600 font-bold">${{ product.price | money_without_currency }}</p>
            
            {% if product.available %}
              <span class="inline-block bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full mt-2">
                Disponible
              </span>
            {% else %}
              <span class="inline-block bg-red-100 text-red-800 text-xs px-2 py-1 rounded-full mt-2">
                Agotado
              </span>
            {% endif %}
          </div>
        </a>
      </div>
    {% endfor %}
  </div>

  {% if collection.products.size == 0 %}
    <div class="text-center py-12">
      <p class="text-gray-500">No hay productos en esta colecci√≥n.</p>
    </div>
  {% endif %}
</div>
